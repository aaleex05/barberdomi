---
import "../styles/global.css";
//import Analytics from "@vercel/analytics/astro";

export interface Props {
  title: string;
  description?: string;
}

const { title = "The Barber Domi - La mejor barbería de Sabadell" } = Astro.props;
const { description = "La Barber Domi es la barbería más destacada de Sabadell, especializada en cortes de pelo, afeitados y cuidados masculinos. Ofrecemos un ambiente acogedor y profesional para que cada visita sea una experiencia única." } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="barbería, cortes de pelo, afeitados, barba, Sabadell, barbería profesional, peluquería masculina, cuidado personal, estilo masculino, grooming, barbería en Sabadell, cortes modernos, afeitado clásico, cuidado de barba, the barber domi, barber domi, domi barber, domi, barber" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="The Barber Domi" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`https://thebarberdomi.vercel.app${Astro.url.pathname}`}/>
    <meta property="og:image" content="/og-image.jpg" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/og-image.jpg" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Barbershop",
        "name": "The Barber Domi",
        "image": "https://thebarberdomi.vercel.app/og-image.jpg",
        "url": "https://thebarberdomi.vercel.app",
        "telephone": "+34 631 04 22 25",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Sabadell",
          "addressCountry": "ES"
        },
        "description": "La Barber Domi es la barbería más destacada de Sabadell, especializada en cortes de pelo, afeitados y cuidados masculinos."
      }
    </script> 
    
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
  
  body {
    font-family: system-ui, sans-serif;
    margin: 0;
    padding: 0;
  }

  .animate-on-scroll {
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.6s ease-out;
  }

  .animate-on-scroll.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>
