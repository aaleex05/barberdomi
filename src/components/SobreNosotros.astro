---
import Badge from "./Badge.astro";
import aboutImg from '../assets/local.jpeg';
import Icon from "./Icon.astro";

const title = "Sobre Nosotros";
const description = "Tradición, precisión y estilo en cada servicio. Descubre la experiencia de una barbería auténtica donde cada detalle cuenta y cada cliente es único.";

const valores = [
  {
    titulo: "Tradición",
    descripcion: "Técnicas clásicas transmitidas de generación en generación"
  },
  {
    titulo: "Precisión", 
    descripcion: "Cada corte ejecutado con maestría y atención al detalle"
  },
  {
    titulo: "Estilo",
    descripcion: "Looks únicos adaptados a la personalidad de cada cliente"
  },
  {
    titulo: "Experiencia",
    descripcion: "Un ambiente auténtico donde el tiempo se detiene"
  }
];
---

<section class="w-full py-16 md:py-24 lg:py-32 ">
  <div class="container px-4 md:px-6 mx-auto">
    <div class="grid gap-12 lg:grid-cols-2 lg:gap-16 items-center">
      <div class="space-y-8">
        <div class="space-y-4">
          <Badge variant="outline" class="mb-4 border-red-300 text-red-700">{title}</Badge>
          <h3 class="text-4xl md:text-5xl lg:text-6xl font-bold text-black leading-tight">
            Maestros en el Arte del <span class="text-red-900">Corte</span>
          </h3>
        </div>

        <div class="space-y-6">
          <p class="text-lg md:text-xl text-slate-600 leading-relaxed">
            {description}
          </p>

          <div class="grid gap-4 sm:grid-cols-2">
            {valores.map((valor) => (
              <div class="border border-slate-200 hover:scale-105 transform transition-all duration-500 rounded-lg border-l-4 border-l-red-600 shadow-sm bg-white">
                <div class="p-4">
                  <h4 class="font-semibold text-slate-900 mb-2">{valor.titulo}</h4>
                  <p class="text-sm text-slate-600">{valor.descripcion}</p>
                </div>
              </div>
            ))}
          </div>
        </div>

        <div class="flex items-center space-x-4 pt-4">
          <div class="h-px bg-red-600 flex-1"></div>
          <span class="text-red-600 font-medium">Barbería Tradicional</span>
          <div class="h-px bg-red-600 flex-1"></div>
        </div>
      </div>

      <div class="relative">
        <div class="bg-red-100 rounded-2xl overflow-hidden hover:scale-105 transform transition-all duration-500">
          <img
            src={aboutImg.src}
            alt="Interior de barbería tradicional con sillones clásicos y ambiente elegante"
            width="500"
            height="600"
            class="object-cover w-full h-[600px]"
          />
        </div>
        <div class="absolute -bottom-6 -right-1 xl:-right-4 bg-red-700 p-4 rounded-xl shadow-lg animate-float">
          <div class="flex items-center space-x-2">
            <Icon name="star" class="h-5 w-5 text-yellow-400" />
            <span class="font-bold text-gray-100">4.9</span>
            <a href="https://booksy.com/es-es/66211_the-barber-domi_barberia_49363_sabadell#ba_s=seo" target="_blank"
            rel="noopener noreferrer" class="text-white text-sm">Booksy Reviews</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>