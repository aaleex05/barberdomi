---
interface Props {
    description: string
	title: string
    link?: string
    price: string
    time?: string
}

const { title, description, link, price, time} = Astro.props
---

<li class="mb-10 ms-6">
    <div class="absolute w-3 h-3 bg-red-600 rounded-full mt-1.5 -left-1.5 border border-white"></div>
    <h3 class="text-lg font-semibold text-white">{title}</h3>
    <p class="text-gray-300 mb-2">{description}</p>
    <div class="flex items-center justify-between">
        <span class="text-sm text-gray-400">{time}</span>
        <span class="text-lg font-bold text-white">{price}</span>
    </div>
    {link && (
        <a href={link} class="text-red-500 hover:underline mt-2 inline-block">Más información</a>
    )}
</li>